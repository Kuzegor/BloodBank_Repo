<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="ListViewItemIssueStyle">
        <Style.Setters>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{DynamicResource MyDarkBrush}"/>
            <Setter Property="Foreground" Value="GhostWhite"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border Background="{TemplateBinding Background}" 
                                Width="480"
                                Height="120"
                                CornerRadius="6"
                                Margin="10,10,0,0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Border CornerRadius="4" Grid.RowSpan="2" Margin="10" Width="125" Background="Transparent">
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                           Background="Transparent"
                                           FontSize="45"
                                           Foreground="White"
                                               Margin="0,0,0,10"
                                           Text="{Binding BloodGroupModel.Name}"/>
                                </Border>



                                <TextBlock Text="{Binding DonationTypeModel.Name}" 
                                           FontSize="18"
                                           Margin="0,10,10,0"
                                           FontWeight="SemiBold"
                                           Grid.Column="1"
                                           HorizontalAlignment="Left"
                                           Height="30"
                                           TextWrapping="Wrap"/>

                                <StackPanel Orientation="Vertical"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,0,10,10"
                                            >

                                    <StackPanel Orientation="Horizontal">

                                        <TextBlock Text="Количество: " 
                                           Margin="0,0,0,0"                                          
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   />

                                        <TextBlock Text="{Binding BloodAmount}" 
                                           Margin="0,0,0,0"                                          
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   FontWeight="SemiBold"/>

                                        <TextBlock Text="{Binding Unit}" 
                                           Margin="4,0,0,0"                                          
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   FontWeight="SemiBold"/>

                                    </StackPanel>
                                
                                    <StackPanel Orientation="Horizontal">


                                        <TextBlock Text="Реципиент: " 
                                           Margin="0,0,0,0"                                          
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   />

                                        <TextBlock Text="{Binding Recipient.Name}" 
                                           Margin="0,0,0,0"                                          
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   FontWeight="SemiBold"/>

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">


                                        <TextBlock Text="Донор: " 
                                           Margin="0,0,0,0"                                          
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   />

                                        <TextBlock Text="{Binding Blood.Donor.Name}"
                                           Margin="0,0,0,0" 
                                           MaxHeight="65"
                                           TextWrapping="Wrap"
                                               FontSize="12"
                                                   FontWeight="SemiBold"/>

                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource MyMediumBrush}"/>
                <Setter Property="IsSelected" Value="True"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource MyMediumBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>